<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="notes.ui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:notes.ui.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{OnPlatform 'icon_notes',
                              iOS='icon_notes_ios',
                              MacCatalyst='icon_notes_ios'}" />

        <ShellContent
            Title="Sobre"
            ContentTemplate="{DataTemplate views:Sobre}"
            Icon="{OnPlatform 'icon_about',
                              iOS='icon_about_ios',
                              MacCatalyst='icon_about_ios'}" />
    </TabBar>
</Shell>
